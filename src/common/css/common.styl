@charset "utf-8"
/* CSS common */
body
  font-size 14px
  color #666
  font-family: "微软雅黑",'Helvetica Neue',Helvetica,Arial,sans-serif;
  position static
  min-width 1180
  background #f5f5f5

select, input, button
  vertical-align middle
  font-size 100%

body, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, p, th, td, form, fieldset, legend, input, button, textarea, blockquote, hr, pre
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6, b, i, button, input, select, textarea
  font-family "microsoft yahei"
  outline none

::-moz-focus-inner
  outline: none

input[type="submit"], input[type="reset"], input[type="button"], button
  -webkit-appearance none

article, aside, details, figcaption, figure, footer, header, nav, section
  display block

[hidden]
  display none

fieldset, img
  border 0

li
  list-style none
  margin 0
  padding 0

input, select
  vertical-align middle

input[type="button"], input[type="submit"], input[type="reset"]
  -webkit-appearance none

textarea
  -webkit-appearance none

a, button, input, textarea, div
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

a
  color #000
  text-decoration none

a:hover
  color #0056a1

.clearfix:after
  content "."
  display block
  height 0
  clear both
  visibility hidden

* html .clearfix
  zoom 1

* + html .clearfix
  zoom 1

[v-cloak]
  display none

body
  background #f5f5f5

.bodyWhite
  background #fff

/*主色调*/
$mainColor = #ff5050 /*产品主色调*/
$redBg = #ee3c43 /*红色背景颜色(按钮)*/
$redFontColor = #e02128 /*红色字体颜色*/

$blueBg = #0065b6 /*蓝色背景颜色(按钮)*/
$buttonRadius = 4px /*按钮圆角值*/
$bgRadius = 4px /*背景圆角值*/
$formRadius = 5px /*表单圆角值*/
$linkColor = #037cff /*链接颜色*/

$contentPaddingTop = 54px

/*版心宽度*/
.vp-layout
  width 1200px !important
  margin 0 auto

/*字体颜色*/
.c-333
  color #333 !important
.c-000
  color #000 !important
.c-red
  color #e02128 !important

.font-14
  font-size 14px !important
.font-16
  font-size 16px !important
.font-18
  font-size 18px !important
.font-20
  font-size 20px !important
.font-36
  font-size 36px !important

.margin-l-5
  margin-left 5px

/*通用按钮样式*/
.btn-normal
  width 100%
  height 40px
  line-height 40px
  background $redBg
  color #ffffff
  font-size 16px
  text-align center
  border-radius $buttonRadius
  margin-top 20px
.btn-gray
  background #ccc !important

/*通用switch按钮*/
.switch-normal
  float right
  margin-top 10px
  .mint-switch-core
    width 46px
    height 24px
    &::before
      width 44px
      height 22px
    &::after
      width 22px
      height 22px
  .mint-switch-input:checked + .mint-switch-core
    border-color #e02128
    background-color #e02128


/*通用placeholder样式*/
input::-webkit-input-placeholder
  color #ccc
  font-size 14px

.no-data
  height 100px
  line-height 100px
  text-align center
  color #666666
  font-size 12px

/** mint-ui 样式重写 **/
.mint-msgbox-content
  padding 20px
.mint-msgbox-message
  padding 10px 0
  line-height 24px
  color #333
  font-size 14px
  text-align left
.mint-msgbox-confirm
  color $redBg
